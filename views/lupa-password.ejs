<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lupa Password - Afaa' Snack</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body class="login-body">
    <div class="login-container">
        <div class="login-box">
            <div class="logo-container">
                <img src="/images/logo.jpeg" alt="Afaa' Snack Logo" class="logo-image">
            </div>
            
            <h2 class="form-title">FORGOT PASSWORD</h2>
            
            <form action="/lupa-password" method="POST" class="login-form">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" id="username" name="username" required placeholder="Masukkan username">
                </div>
                
                <div class="form-group">
                    <label for="password_baru">Password Baru</label>
                    <input type="password" id="password_baru" name="password_baru" required placeholder="Masukkan password baru">
                </div>

                <% if (typeof error !== 'undefined') { %>
                    <div class="error-message"><%= error %></div>
                <% } %>

                <button type="submit" class="btn-login">RESET PASSWORD</button>
            </form>

            <div class="login-footer">
                <a href="/login">Kembali ke Login</a>
            </div>
        </div>
    </div>
</body>
</html>
